<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF1F8"
    android:orientation="vertical"
    tools:context=".Select_service">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusableInTouchMode="true"

        >

        <ImageButton
            android:id="@+id/user_btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:scaleType="center"
            android:onClick="menu_profile_fragment"
            android:src="@drawable/menu" />

        <EditText
            android:id="@+id/select_service_searrch_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/search_icon_xml"
            android:hint="Search"
            android:textColorHint="#fff"
            android:background="@drawable/serach_bar_bg"
            android:padding="20dp"
            android:textColor="#fff"
            android:textSize="24dp" />

    </LinearLayout>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Select the Required Services"
        android:textColor="#f1a940"
        android:textSize="18dp" />


    <android.support.v7.widget.RecyclerView

        android:elevation="5dp"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:background="#fff"
        android:id="@+id/service_select_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>